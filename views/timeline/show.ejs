<% layout('layout/boilerplate')%>

<section>
    <div class="gap gray-bg">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="row" id="page-contents">

                        <%- include('../partials/sideBar1') %> 
                        <div class="col-lg-6"><!-- centerl meta -->
                            <div class="central-meta item">
                                <div class="user-post">
                                    <form action="">
                                        <button class="submit float-right">Follow</button>
                                    </form>
                                    <div class="friend-info">
                                        
                                                                  
                                        <figure>
                                            <img src="<%=post.author.dp%>" alt="">
                                        </figure>
                                        <div class="friend-name">
                                            <ins><a href="time-line.html" title=""><%= post.author.username %> </a></ins>
                                            <span>published: <%= post.createdAt %> </span>

                                        </div>
                                        <div class="">
                                            <h1><%= post.title %> </h1>
                                             <h6 class="text-muted"><%= post.location %> </h3>
                                                <p class="starability-result" data-rating=<%= post.rating %> >
                                                    Rated: 3  stars
                                                  </p>
                                        </div>
                                        <div class="post-meta">
                                            <img src="<%= post.image %> " alt="">
                                            <div class="we-video-info  ">
                                                <ul class="float-right">
                                                    <li>
                                                        <span class="comment" data-toggle="tooltip" title="Comments">
                                                            <i class="fa fa-comments-o"></i>
                                                            <ins><%= post.comments?post.comments.length:0 %> </ins>
                                                        </span>
                                                    </li>
                                                    <li>
                                                        <span class="like" data-toggle="tooltip" title="like">
                                                            <i class="ti-heart"></i>
                                                            <ins><%= post.likes %> </ins>

                                                        </span>
                                                    </li>
                                                </ul>
                                            </div>
 
                                            <div class="description">     
                                                <p>
                                                    <%= post.post %> 
                                                </p>
                                            </div>
                                            <div class="float-right">
                                            <form action="/post/<%= post.id %>/edit" method="get">
                                                <button class="submit mb-1">Edit</button>
                                            </form>

                                            <form action="/post/<%= post.id %>?_method=DELETE" method="POST">
                                                <button class="submit ">Delete</button>
                                            </form>
                                           </div>

                                         

                                        </div>
                                    </div>
                                    <hr>
                                    <div class="coment-area">
                                        <ul class="we-comet">
                                            <% for(let comment of post.comments){ %> 
                                                <li>
                                                    <div class="comet-avatar">
                                                        <img src="<%= comment.author.dp %> " alt="">
                                                    </div>
                                                    <div class="we-comment">
                                                        <div class="coment-head">
                                                            <h5><a href="time-line.html" title=""><%= comment.author.username %> </a></h5>
                                                            <!-- <span>1 year ago</span> -->
                                                        </div>
                                                        <p>
                                                            <%= comment.comment %> 
                                                        </p>

                                                        <div class="float-right">
                                                            <form action="/post/<%= post.id %>/comment/<%= comment.id %>?_method=DELETE " method="post">
                                                                <button class="submit mb-1">Delete</button>
                                                            </form>
                                                           </div>
                                                    </div>
    
                                                </li>
                                                <% } %> 

                                            <li class="post-comment">
                                                <div class="comet-avatar">
                                                    <img src="/images/resources/comet-2.jpg" alt="">
                                                </div>
                                                <div class="post-comt-box">
                                                    <form method="post" action="/post/<%= post.id %>/comment">
                                                        <textarea placeholder="Post your comment" name="commentBody"></textarea>
      
                                                        <button type="submit">Submit</button>
                                                    </form>	
                                                </div>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>

                            </div>

                        <%- include('../partials/sidebar3') %> 


                    </div>	
                </div>
            </div>
        </div>
    </div>	
</section>